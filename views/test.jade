doctype html

html

	head

		title Jade Test

	body

		- var title = "My Jade Page";
		- // names array
		- var names = [ "Jason", "Tamara", "Andrew", "Shannon", "Roger", "Melinda" ];

		- // generate random number
		- var random = Math.floor(Math.random() * names.length);
		
		- // pull random name
		- var name = names[random];

		h1 #{ title }

		p Hello, my name is 
			strong #{ name }

		p Something conditional.

		p For the record, my name has 

			if ( name.length >= 6 )

				span 6 or more letters
				
			else

				span less than 6 letters